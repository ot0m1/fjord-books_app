<h1><%= t(@title) %></h1>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= t(@title) %>:</strong><br>
    <% if @users.any? %>
      <% @users.each do |user| %>
        <% if user.name.empty? %>
          <%= link_to user.email, user %>
        <% else %>
          <%= link_to user.name, user %>
        <% end %>
      <% end %>
    <% end %>
</p>

<%= link_to t('views.common.back'), user_path %>
